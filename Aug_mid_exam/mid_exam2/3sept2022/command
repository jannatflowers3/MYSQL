 create table student(
    -> id int(30) not null auto_increment,
    -> name varchar(50) not null,
    -> st_address varchar(100) not null,
    -> st_mobile varchar(20),
    -> primary key(id));

    create table results (
    -> id int(20) not null auto_increment,
    -> module_name varchar(20) not null,
    -> titakmarks int(5) not null,
    -> student_id int(10) not null,
    -> primary key (id));

    CREATE VIEW students_result_view 
SELECT id,stname,st_mobile ,module_name,totalmarks FROM student,results WHERE id = re_id ORDER By stname;

